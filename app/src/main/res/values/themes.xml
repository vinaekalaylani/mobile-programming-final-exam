<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SiSehat" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your light theme here. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SiSehat" parent="Base.Theme.SiSehat" />

    <!-- Shape Appearance for Circle Image -->
    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Button Styles -->
    <style name="UiButton.EditProfile" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/clr_btn_edit_bg</item>
        <item name="android:textColor">@color/clr_text_primary</item>
    </style>

    <style name="UiButton.LogoutProfile" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/clr_btn_logout_stroke</item>
        <item name="android:textColor">@color/clr_btn_logout_stroke</item>
    </style>
</resources>